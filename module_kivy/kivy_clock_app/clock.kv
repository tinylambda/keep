<Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True

BoxLayout:
    orientation: 'vertical'

    Label:
        id: time
        text: '[b]00[/b]:00:00'

    BoxLayout:
        size_hint_y: None
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20

        RobotoButton:
            id: stopwatch
            text: 'Start'
            on_press: app.start_stop()

        RobotoButton:
            text: 'Reset'
            on_press: app.reset()
    Label:
        id: stopwatch_label
        text: '00:00.[size=40]00[/size]'